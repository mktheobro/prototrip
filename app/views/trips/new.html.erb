<div class="main-background">
  <div class="left-side">
  ここに地図
  
  <script src="https://maps.googleapis.com/maps/api/js?key=ここにAPIKEY&callback=initMap" async defer></script>
  </div>


  <div class="right-side">
  ここにデータ入力
    <div class="maps-main">
      <%= form_with model: @point, url: trips_path, method: :post, local: true do |f| %>
        <%# 旅　タイトル入力 　詳細未定%>
            <div class="weight-bold-text">
              旅タイトル
            </div>
            <%= f.text_area :trip_title, class:"maps-text", id:"maps-address", placeholder:"旅タイトル" %>
        <%# /旅　タイトル入力 　詳細未定 %>

        <%# 旅　コメント入力 　詳細未定%>
            <div class="weight-bold-text">
              旅コメント
            </div>
            <%= f.text_area :trip_title, class:"maps-text", id:"maps-address", placeholder:"旅コメント" %>
        <%# /旅　コメント入力 　詳細未定 %>


        <div class="trip_point">
          <%# 住所入力 %>
              <div class="weight-bold-text">
                住所
              </div>
              <%= f.text_area :address, class:"maps-text", id:"maps-address", placeholder:"住所" %>
          <%# /住所入力 %>

          <%# コメント入力 %>
                <div class="weight-bold-text">
                  おすすめポイント
                </div>
                <%= f.text_area :point_comment, class:"maps-text", id:"maps-comment", placeholder:"ポイントの説明（必須 1,000文字まで）訪れたポイントの見どころ、おすすめ商品、裏話などを書き込んでください" ,rows:"7" ,maxlength:"1000" %>
          <%# /コメント入力 %>

          <%# 画像 %>
            <div class="img-upload">
              <div class="weight-bold-text">
                画像
              </div>
              <div class="click-upload">
                <p>
                  クリックしてファイルをアップロード
                </p>
                <%= f.file_field :image, id:"item-image" %>
              </div>
            </div>
          <%# /出品画像 %>
        </div>

        <%= f.submit '投稿する' %>
      <% end %>
    </div>  
  </div>


</div>